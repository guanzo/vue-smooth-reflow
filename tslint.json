{
  "extends": "tslint:recommended",
  "rules": {
    "indent": [
      true,
      "spaces"
    ],
    "ordered-imports": true,
    "array-type": [true, "generic"],
    "no-var-requires": false,
    "max-line-length": [
      true,
      180
    ],
    "no-empty-interface": false,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "semicolon": [
      true,
      "never"
    ],
    "member-ordering": false,
    "quotemark": [
      true,
      "double",
      "avoid-escape"
    ],
    "eofline": true,
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords"
    ],
    "object-literal-sort-keys": false
  }
}
